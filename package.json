{
  "name": "pixel-launcher",
  "version": "1.1.0",
  "description": "Launcher for Pixel.",
  "author": {
    "name": "dev2alert",
    "email": "atmpotn@yandex.ru"
  },
  "homepage": "https://starpixel.org/",
  "main": "./dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development tsc-watch --onSuccess \"electron .\"",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "build": "ts-node ./src/scripts/build",
    "build:main": "rimraf ./dist && tsc",
    "build:view": "cross-env NODE_ENV=production webpack -c \"./src/webpack.config.ts\"",
    "build:win": "ts-node ./src/scripts/build-win",
    "build:linux": "ts-node ./src/scripts/build-linux",
    "build:linux-x64": "ts-node ./src/scripts/build-linux-x64",
    "lint": "eslint ./src ./view/src --ext .ts,.tsx",
    "lint:fix": "eslint ./src ./view/src --ext .ts,.tsx --fix",
    "format": "prettier --write ./src ./view/src"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.14",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/webpack-hot-middleware": "^2.25.6",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^21.3.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "mobx": "^6.6.2",
    "mobx-react": "^7.5.3",
    "normalize.css": "^8.0.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-middleware": "^5.3.3",
    "webpack-hot-middleware": "^2.25.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.0.2",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6",
    "tsee": "^1.3.2"
  }
}
